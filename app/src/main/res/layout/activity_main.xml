<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/pointerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pointer"/>

        <FrameLayout
            android:id="@+id/text_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:visibility="gone"
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name: Apple"
                android:padding="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energy"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs"
                android:layout_marginTop="60dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar"
                android:layout_marginTop="90dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:layout_marginTop="120dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/sodium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sodium"
                android:layout_marginTop="150dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvSimilarProduct"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/rvSimilarProducts"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="SIMILAR PRODUCTS"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rvSimilarProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />




    </FrameLayout>


</layout>